<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/info', user:@user %>
      <%= render 'books/create', book:@book %>
    </div>

    <div class="col-lg-8">
      <h1>Users</h1>
      <table class="table">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 30, 30, format:'jpeg', fallback:'no_image.jpg', size:'30x30' %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "Show", user_path(user.id) %>
        </td>
      </tr>
      <% end %>
      </table>
    </div>

  </div>
</div>