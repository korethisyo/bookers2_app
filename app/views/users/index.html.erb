<h1>Users</h1>
 <table>
   <tr>
     <th>image</th>
     <th>name</th>
     <th></th>
   </tr>
   <% @users.each do |user| %>
   <tr>
     <td>
      <%= user.name %>
     </td>
     <td>
       <%= link_to "Show", user_path(user.id) %>
     </td>
   </tr>
   <% end %>
 </table>

 <h1>User info</h1>
 <%= form_with model:@user, local:true do |f| %>
  <h3>Name</h3>
  <%= f.text_field :name %>
  <h3>Introduction</h3>
  <%= f.text_area :introduction %>
  <%= link_to "edit", edit_user_path %>
 <% end %>

 <h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

