<h1>Users</h1>
<table>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
     <%= user.name %>
    </td>
    <td>
      <%= link_to "Show", user_path(user.id) %>
    </td>
  </tr>
  <% end %>
</table>

<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:'no_image.jpg' %>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<%= link_to edit_user_path(@user), method: :get do %>
  <i class="fas fa-user-cog"></i>
<% end %>


<h1>New book</h1>
<%= form_with(model:[@book, @user], local:true) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

