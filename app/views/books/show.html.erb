 <% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user:@user %>
      <%= render 'books/create', book:@new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td><%= link_to (attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:'no_image.jpg', size:'30x30'), user_path(@user.id) %><br><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book) %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>