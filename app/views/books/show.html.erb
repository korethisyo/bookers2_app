<h1>Book detail</h1>
 <table>
   <tr>
     <td><%= link_to (attachment_image_tag @user, :profile_image, :fill, 30, 30, format:'jpeg', fallback:'no_image.jpg'), user_path(@user.id) %></td>
     <td><%= @user.name %></td>
     <td><%= @book.title %></td>
     <td><%= @book.body %></td>
     <td><%= link_to "Edit", edit_book_path(@book) %></td>
     <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
   </tr>
 </table>

<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:'no_image.jpg' %>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<%= link_to edit_user_path(@user), method: :get do %>
  <i class="fas fa-user-cog"></i>
<% end %>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
