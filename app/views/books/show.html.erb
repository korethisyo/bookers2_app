<h1>Book detail</h1>
 <table>
   <tr>
     <th>Title</th>
     <th>Opinion</th>
   </tr>
   <% @book.each do |book| %>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
   </tr>
   <% end %>
 </table>

 <h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
