<h1>Books</h1>
 <table class="table">
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
   <% books.each do |book| %>
   <tr>
     <td>
      <%= link_to (attachment_image_tag book.user, :profile_image, :fill, 30, 30, format:'jpeg', fallback:'no_image.jpg', size:'30x30'), user_path(book.user) %>
     </td>
     <td>
      <%= link_to book.title, book_path(book.id) %>
     </td>
     <td><%= book.body %></td>
   </tr>
   <% end %>
 </table>
